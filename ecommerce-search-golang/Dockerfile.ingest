FROM golang:1.23-alpine AS builder

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache gcc musl-dev

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the ingestion script
RUN CGO_ENABLED=1 go build -o ingest ./cmd/ingest

# Runtime stage
FROM alpine:latest

WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache ca-certificates

COPY --from=builder /app/ingest .

# Default values (override with docker run -e)
ENV QDRANT_HOST=""
ENV QDRANT_API_KEY=""
ENV OPENAI_API_KEY=""
ENV NUM_WORKERS="4"

CMD ["./ingest"]